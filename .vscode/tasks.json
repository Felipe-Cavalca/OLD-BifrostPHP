{
    "version": "2.0.0",
    "tasks": [
        // Scripts do bifrost
        {
            "label": "build containers",
            "type": "shell",
            "command": "docker-compose",
            "args": [ "up", "--build", "-d"]
        },
        {
            "label": "up containers",
            "type": "shell",
            "command": "docker-compose",
            "args": ["up","-d"]
        },
        // Scripts do front
        {
            "label": "Front docker build",
            "type": "shell",
            "command": "docker",
            "args": ["build", "-t", "bifrostphp-front", "app"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Front docker run",
            "type": "shell",
            "command": "docker",
            "args": ["run", "-d", "--name", "bifrostphp-front", "-p", "20080:80", "bifrostphp-front"],
            "dependsOn": ["docker build"]
        },
        {
            "label": "back docker-compose up",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "api/docker-compose.yml", "up", "--build", "-d"]
        }
    ]
}
